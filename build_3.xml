              java112/employee/**,
              java112/project2/**,
              java112/project3/**,
              java112/project4/**,
              java112/utilities/**,
              "
    deprecation="on"
    debug="on"
    includeAntRuntime="false" />
  </target>

  <target name="run_tests_lab2" depends="build_labs">
